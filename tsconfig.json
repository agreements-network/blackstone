{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    // Strict mode, at some point
//    "strict": true,
//    "noImplicitAny": true,
//    "strictNullChecks": true,
//    "strictFunctionTypes": true,
//    "strictBindCallApply": true,
//    "strictPropertyInitialization": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
